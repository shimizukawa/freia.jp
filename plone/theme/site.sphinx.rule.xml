<rules xmlns="http://namespaces.plone.org/xdv"
	xmlns:css="http://namespaces.plone.org/xdv+css"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

<!-- head -->
<replace theme="//head/title" content="//head/title"/>
<before css:theme="#theme-css" css:content="head > *"/>

<before css:theme="#theme-css">
	<style type="text/css">
		.documentbody {background-color: #F7F9FB; padding: 0.3em;}
		.documentbody h2 {border-bottom: 1px solid green;}
		a.reference {color: #355F7C;}
		div.sphinxsidebar {float: none; margin-left: 0; width: 100%; font-size: 100%;}
		div.sphinxsidebar h3, div.sphinxsidebar h4 {color: black;}
		div.sphinxsidebar ul {margin-right:0;}
		div.sphinxsidebarwrapper {padding:4px; overflow:hidden;}
		div.related {background-color: transparent; color: black; line-height: 2em;}
		div.related a {color: #355F7C;}
		div.related a:hover {text-decoration: underline;}
		div.footer {background-color: #11303D;}
	</style>
</before>

<!-- site logo -->
<copy css:theme="#logo">
	<a href="/taka/" accesskey="1" id="portal-logo">清水川Web</a>
</copy>

<!-- site menu -->
<copy css:theme="#menu">
	<ul>
		<li class="plain" id="portaltab-index_html">
			<a title="" href="http://www.freia.jp/taka/">ホーム</a>
		</li>
		<li class="plain" id="portaltab-blog">
			<a title="Zope, Python, FreeBSD, その他色々について。つまり日記か。" href="http://www.freia.jp/taka/blog">清水川記</a>
		</li>
		<li class="selected" id="portaltab-docs">
			<a title="ドキュメント類" href="http://www.freia.jp/taka/docs">ドキュメント</a>
		</li>
		<li class="plain" id="portaltab-memo">
			<a title="覚え書きや、作ったものなどをおいてあります。「旧：覚え書き／作ったもの」からの移行中です。" href="http://www.freia.jp/taka/memo">メモ</a>
		</li>
		<li class="plain" id="portaltab-file">
			<a title="配布用だったりいろいろなファイルを置く場所。" href="http://www.freia.jp/taka/file">ファイル</a>
		</li>
		<li class="plain" id="portaltab-photo">
			<a title="XP,Zope,食,旅行等の各種イベントの写真を置いています。" href="http://www.flickr.com/photos/shimizukawa/sets/">アルバム</a>
		</li>
	</ul>
</copy>

<!-- breadcrumb -->
<before css:theme="#content">
	<div class="related">
		現在位置: 
		<a href="/taka/">ホーム</a> →
	</div>
</before>
<before css:theme="#content" content="//div[@class='related'][1]"/>
<after  css:theme="#content" content="//div[@class='related'][2]"/>

<!-- document body -->
<copy css:theme="#left">
	<div class="documentbody">
		<xsl:copy-of css:select="div.body > *"/>
	</div>
</copy>

<!-- portlets -->
<copy css:theme="#nav" css:content=".sphinxsidebar"/>
<drop css:theme=".box.sample" />

<!-- footer -->
<after css:theme="#footer" css:content=".footer"/>

</rules>

