<rules xmlns="http://namespaces.plone.org/xdv"
	xmlns:css="http://namespaces.plone.org/xdv+css"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

<!-- head -->
<replace theme="//head/title" content="//head/title"/>
<prepend theme="/html/head" css:content="head > *"/>

<append theme="/html/head">
	<style type="text/css">
		.documentbody {font-size: 110%; background-color: #F7F9FB; padding: 0.3em;}
		.documentbody h2 {border-bottom: 1px solid green;}
		a.reference {color: #355F7C;}
		div.sphinxsidebar {float: none; margin-left: 0; width: 100%; font-size: 80%;}
		div.sphinxsidebar h3, div.sphinxsidebar h4 {color: black;}
		div.sphinxsidebar ul {margin-right:0;}
		div.sphinxsidebarwrapper {padding:4px; overflow:hidden;}
		div.related {background-color: transparent; color: black; line-height: 2em; font-size: 100%;}
		div.related a {color: #355F7C;}
		div.related a:hover {text-decoration: underline;}
		div.footer {background-color: #11303D; font-size: 100%;}
	</style>
</append>

<!-- site logo -->
<replace css:theme="#logo">
	<a href="/taka" accesskey="1" id="portal-logo">清水川Web</a>
</replace>

<!-- site menu -->
<copy css:theme="#menu">
	<ul>
		<li class="plain" id="portaltab-index_html">
			<a title="" href="http://www.freia.jp/taka" target="_blank">ホーム</a>
		</li>
		<li class="plain" id="portaltab-blog">
			<a title="Zope, Python, FreeBSD, その他色々について。つまり日記か。" href="http://www.freia.jp/taka/blog" target="_blank">清水川記</a>
		</li>
		<li class="selected" id="portaltab-docs">
			<a title="ドキュメント類" href="http://www.freia.jp/taka/docs" target="_blank">ドキュメント</a>
		</li>
		<li class="plain" id="portaltab-memo">
			<a title="覚え書きや、作ったものなどをおいてあります。「旧：覚え書き／作ったもの」からの移行中です。" href="http://www.freia.jp/taka/memo" target="_blank">メモ</a>
		</li>
		<li class="plain" id="portaltab-file">
			<a title="配布用だったりいろいろなファイルを置く場所。" href="http://www.freia.jp/taka/file" target="_blank">ファイル</a>
		</li>
		<li class="plain" id="portaltab-photo">
			<a title="XP,Zope,食,旅行等の各種イベントの写真を置いています。" href="http://www.freia.jp/taka/photo" target="_blank">アルバム</a>
		</li>
	</ul>
</copy>

<!-- breadcrumb -->
<before css:theme="#content">
	<div class="related">
		<a href="/taka/">ホーム</a> →
		<a href="/taka/docs/">ドキュメント</a> →
	</div>
</before>
<before css:theme="#content" content="//div[@class='related'][1]"/>
<after  css:theme="#content" content="//div[@class='related'][2]"/>

<!-- document body -->
<copy css:theme="#left">
	<div class="documentbody">
		<xsl:copy-of css:select="div.body > *"/>
	</div>
</copy>

<!-- portlets -->
<copy css:theme="#nav" css:content=".sphinxsidebar"/>
<drop css:theme=".box" />

<!-- footer -->
<replace css:theme="#footer" css:content=".footer"/>

</rules>

